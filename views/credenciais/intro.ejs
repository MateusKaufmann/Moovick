<script>
    function texto() {
        setTimeout(function() {
            document.getElementById('1').setAttribute('class', 'text-light animated fadeOut slow');
            setTimeout(function() {
                document.getElementById('1').setAttribute('style', 'display:none')
                document.getElementById('2').setAttribute('style', 'height: 15rem; margin-top: 10rem; font-size: 3rem; display:block')
                document.getElementById('2').setAttribute('class', 'text-light animated fadeIn slow');
                setTimeout(function() {
                    document.getElementById('2').setAttribute('class', 'text-light animated fadeOut slow');
                    setTimeout(function() {
                        document.getElementById('2').setAttribute('style', 'display:none')
                        document.getElementById('tutorial').setAttribute('style', 'display:block');
                        document.getElementById('tutorial').setAttribute('class', 'text-light animated fadeIn slow');
                        document.getElementById('3').setAttribute('style', 'display:block');
                        document.getElementById('3').setAttribute('class', 'figure text-light animated fadeIn slow');
                        var i = 100;
                        if (i == 100) {
                            i = 0;
                            var time = 20000;
                            var elem = document.getElementById("barra");
                            elem.innerText = time;
                            elem.style.width = "100%";
                            var width = 100;
                            var id = setInterval(function frame() {
                                if (width <= 0) {
                                    clearInterval(id);
                                    i = 100;
                                    elem.style.width = "0%";
                                } else {
                                    width--;
                                    elem.style.width = width + "%";
                                    time -= 200;
                                    elem.innerText = parseInt(time / 1000) + 's';
                                }
                            }, 200);
                        }
                        setTimeout(function() {
                            document.getElementById('3').setAttribute('class', 'text-light animated fadeOut');
                            setTimeout(function() {
                                document.getElementById('3').setAttribute('style', 'display:none')
                                document.getElementById('4').setAttribute('style', 'display:block');
