                                            time -= 200;
                                            elem.innerText = parseInt(time / 1000) + 's';
                                        }
                                    }, 200);
                                }
                                setTimeout(function() {
                                    document.getElementById('4').setAttribute('class', 'text-light animated fadeOut');
                                    setTimeout(function() {
                                        document.getElementById('4').setAttribute('style', 'display:none')
                                        document.getElementById('5').setAttribute('style', 'display:block');
                                        document.getElementById('5').setAttribute('class', 'figure text-light animated fadeIn slow');
                                        var i = 100;
                                        if (i == 100) {
                                            i = 0;
                                            var time = 20000;
                                            var elem = document.getElementById("barra");
                                            elem.innerText = time;
                                            elem.style.width = "100%";
                                            var width = 100;
                                            var id = setInterval(function frame() {
                                                if (width <= 0) {
                                                    clearInterval(id);
                                                    i = 100;
                                                    elem.style.width = "0%";
                                                } else {
                                                    width--;
                                                    elem.style.width = width + "%";
                                                    time -= 200;
                                                    elem.innerText = parseInt(time / 1000) + 's';
                                                }
                                            }, 200);

                                        }
                                        setTimeout(function() {
                                            document.getElementById('5').setAttribute('class', 'text-light animated fadeOut');
                                            setTimeout(function() {
                                                document.getElementById('5').setAttribute('style', 'display:none')
                                                document.getElementById('6').setAttribute('style', 'display:block');
                                                document.getElementById('6').setAttribute('class', 'figure text-light animated fadeIn slow');
                                                var i = 100;
                                                if (i == 100) {
                                                    i = 0;
                                                    var time = 20000;
                                                    var elem = document.getElementById("barra");
                                                    elem.innerText = time;
                                                    elem.style.width = "100%";
                                                    var width = 100;
                                                    var id = setInterval(function frame() {
                                                        if (width <= 0) {
                                                            clearInterval(id);
                                                            i = 100;
                                                            elem.style.width = "0%";
                                                        } else {
                                                            width--;
                                                            elem.style.width = width + "%";
                                                            time -= 200;
                                                            elem.innerText = parseInt(time / 1000) + 's';
                                                        }
                                                    }, 200);
                                                }
                                                setTimeout(function() {
                                                    document.getElementById('6').setAttribute('class', 'text-light animated fadeOut');
                                                    setTimeout(function() {
                                                        document.getElementById('6').setAttribute('style', 'display:none')
                                                        document.getElementById('7').setAttribute('style', 'height: 15rem; margin-top: 10rem; font-size: 3rem; display:block');
                                                        document.getElementById('7').setAttribute('class', 'figure text-light animated fadeIn slow');
                                                        document.getElementById("barraDiv").setAttribute('style', 'display: none');
                                                        document.getElementById("b1").setAttribute('style', 'border-radius: 1rem; margin: 2rem; display: block');
                                                        document.getElementById("b2").setAttribute('style', 'border-radius: 1rem; margin: 2rem; display: block');
                                                        document.getElementById("b1").setAttribute("class", "btn btn-light btn-lg animated vanishIn faster");
                                                        document.getElementById("b2").setAttribute("class", "btn btn-light btn-lg animated vanishIn fast");
                                                    }, 1000);
                                                }, 20000);
                                            }, 1000);
                                        }, 20000);
                                    }, 1000);
                                }, 20000);
                            }, 1000);
                        }, 20000);
                    }, 1000);
                }, 3000);
            }, 1000);
        }, 3000);
    }

    function preparado() {
        document.getElementById("b1").setAttribute("class", "btn btn-light btn-lg animated fadeOut faster");
        document.getElementById("b2").setAttribute("class", "btn btn-light btn-lg animated fadeOut faster");
        document.getElementById('7').setAttribute('class', 'text-light animated fadeOut');
        setTimeout(function() {
            document.getElementById('7').setAttribute('style', 'display:none');
            document.getElementById('8').setAttribute('style', 'height: 15rem; margin-top: 10rem; font-size: 3rem; display:block')
            document.getElementById('8').setAttribute('class', 'text-light animated fadeIn');
            setTimeout(function() {
                document.getElementById('8').setAttribute('class', 'text-light animated fadeOut');
                setTimeout(function() {
                    window.location.href = "home";
                }, 1000)
            }, 1000)
        }, 1000)

    }

    function reload() {
        window.location.href = "intro";
    }

    window.onload = texto();
</script>

